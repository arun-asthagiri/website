<IndexLayout title={themeConfig.site.title} description={themeConfig.site.description}>
  <About />
 
   

  <body>
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/1.4.0/p5.js"></script>
    <script is:inline src="../scripts/sketch.js"></script>

  </body>

  <main>
    <p> <b>Explore some musings, past work, and projects here:</b></p>
    <PostList posts={posts} />
  </main>

  {
    themeConfig.general.footer && (
      <div>
        <Footer />
      </div>
    )
  }  
  
  
</IndexLayout>
